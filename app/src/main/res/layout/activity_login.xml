<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_gravity="center"
    tools:context=".login">

    <ImageView
        android:layout_gravity="center"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:src="@drawable/pl"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:paddingLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/lg_text1"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="110dp">

            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mahasiswa"
                android:background="@drawable/mhs"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/alumni"
                android:layout_width="match_parent"
                android:gravity="center"
                android:text="Alumni"
                android:layout_height="wrap_content"
                android:background="@drawable/alum"
                android:textColor="@color/disable"/>

        </LinearLayout>

    </LinearLayout>
    
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:layout_width="350dp"
        android:layout_height="46dp">
        
        <EditText
            android:id="@+id/nim"
            android:layout_width="match_parent"
            android:hint="@string/nim"
            android:background="@drawable/field"
            android:padding="10dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="350dp"
        android:layout_height="46dp">

        <EditText
            android:id="@+id/pin"
            android:layout_width="match_parent"
            android:hint="@string/pin"
            android:padding="10dp"
            android:background="@drawable/field"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/mhs_masuk"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/button"
            android:textAllCaps="false"
            android:text="@string/masuk"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Belum punya akun SILUG ?"/>

        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/lug"
            android:text="Daftar disini"/>
    </LinearLayout>


</LinearLayout>