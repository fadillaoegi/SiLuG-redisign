<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center">

<!--  Card BOP  -->

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="70dp"
            android:layout_marginTop="1dp"
            android:id="@+id/cvbop2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:background="@color/bg_card_sskm1"
                android:layout_width="360dp"
                android:layout_height="50dp">

                <LinearLayout
                    android:layout_marginLeft="17dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/lunas"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/sudahlunas"/>

                    <LinearLayout
                        android:layout_marginLeft="31dp"
                        android:layout_marginRight="124dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:id="@+id/tv_tanggal_bop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10 Desember 2020"/>

                        <TextView
                            android:textSize="10dp"
                            android:id="@+id/tv_jumlah_bop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rp.5.000.0000"/>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/rightbop"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/rightbop"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

<!--  End Card BOP  -->

</LinearLayout>