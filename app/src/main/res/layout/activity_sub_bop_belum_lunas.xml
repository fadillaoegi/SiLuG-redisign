<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".subBopBelumLunas">

<!--  Container  -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <!--    Header    -->
        <LinearLayout
            android:layout_width="410dp"
            android:layout_height="107dp"
            android:background="#F9FBFF"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backsskm"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="69dp"
                android:src="@drawable/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/nunito_black"
                android:gravity="center"
                android:text="BOP"
                android:textColor="#2E2E2E"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>
        <!--    EndHeader    -->

        <!--  Card Notif  -->

        <androidx.cardview.widget.CardView
            android:layout_marginTop="36dp"
            app:cardCornerRadius="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:background="#E37765"
                android:layout_width="328dp"
                android:layout_height="54dp">

                <TextView
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="7dp"
                    android:textSize="11dp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pengumuman BAAK"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="2dp"
                    android:textSize="10dp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tagihan BOP smt 201 Angsuran Ke- 1 belum dibayar"/>



            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!--  EndCard Notif  -->

<!--    Keterangan BOP    -->

        <androidx.cardview.widget.CardView
            android:elevation="7dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="327dp"
                android:layout_height="390dp">

                <TextView
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pembayaran BOP"/>
<!--        Jumlah BOP        -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jumlah BoP"/>

                    <TextView
                        android:textSize="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp.4.700.000,00"/>

                </LinearLayout>
<!--        EndJumlah BOP        -->

<!--        Jumlah Denda        -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Denda"/>

                    <TextView
                        android:textSize="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp.0,00"/>

                </LinearLayout>
<!--        EndJumlah Denda        -->

            </LinearLayout>

        </androidx.cardview.widget.CardView>

<!--    EndKeterangan BOP    -->

    </LinearLayout>

<!--  EndContainer  -->

</LinearLayout>